<%- include('partials/header', { title: 'Forgot Password | Forge My Hero' }) %>

<main class="page page-auth">
  <section class="hero-auth">
    <h1>Forgot your password?</h1>
    <p>Enter the email for your Forge My Hero account and we'll send a reset link.</p>
  </section>

  <section class="auth-card">
    <div class="auth-card__inner">
      <% if (successMessage) { %>
        <div class="auth-success"><%= successMessage %></div>
      <% } %>

      <% if (errorMessage) { %>
        <div class="auth-error"><%= errorMessage %></div>
      <% } %>

      <form action="/users/forgot" method="POST" class="auth-form">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            id="email"
            name="email"
            type="email"
            required
            value="<%= formData && formData.email ? formData.email : '' %>"
          />
        </div>

        <button type="submit" class="btn btn-primary">Send reset link</button>
      </form>

      <p class="auth-switch">
        Remembered your password? <a href="/users/login">Back to login</a>
      </p>
    </div>
  </section>
</main>

<%- include('partials/footer') %>