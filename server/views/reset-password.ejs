<%- include('partials/header', { title: 'Reset Password | Forge My Hero' }) %>

<main class="page page-auth">
  <section class="hero-auth">
    <h1>Reset your password</h1>
    <p>Choose a new password to get back into your account.</p>
  </section>

  <section class="auth-card">
    <div class="auth-card__inner">
      <% if (successMessage) { %>
        <div class="auth-success"><%= successMessage %></div>
      <% } %>

      <% if (errorMessage) { %>
        <div class="auth-error"><%= errorMessage %></div>
      <% } %>

      <% if (canReset !== false) { %>
        <form action="/users/reset/<%= token %>" method="POST" class="auth-form">
          <div class="form-group">
            <label for="password">New Password</label>
            <input
              id="password"
              name="password"
              type="password"
              required
            />
          </div>

          <div class="form-group">
            <label for="confirmPassword">Confirm New Password</label>
            <input
              id="confirmPassword"
              name="confirmPassword"
              type="password"
              required
            />
          </div>

          <button type="submit" class="btn btn-primary">RESET</button>
        </form>
      <% } else { %>
        <p class="auth-switch">Need a new link? <a href="/users/forgot">Request another password reset</a></p>
      <% } %>

      <p class="auth-switch">
        Remembered your password? <a href="/users/login">Back to login</a>
      </p>
    </div>
  </section>
</main>

<%- include('partials/footer') %>